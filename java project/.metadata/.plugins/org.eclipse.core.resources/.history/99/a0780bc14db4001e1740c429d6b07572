package day0116;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

/* **과일입고목록**
 * 번호  과일명  수량   단가    총금액
 * 1    바나나  10   2000  20000원
 * 2    포도   20   15000
 * 아보카도,30,3500
 * 토마토,15,8000
 * 오렌지,12,4000
 */

public class Quiz_15 {
	
	public static void fileRead()
	{
		String fName="C:\\sist0403\\file\\fruit.txt";
		FileReader fr=null;
		BufferedReader br=null;
		int i=0;
		
        
        
        
	 try {
		fr=new FileReader(fName);
		br=new BufferedReader(fr);
		
		System.out.println("**과일입고목록**");
		System.out.println("번호\t과일명\t수량\t단가\t총금액");
		System.out.println("==============================");
		while(true)
		{
			String s=br.readLine();
			i++;
			
			
			if(s==null)
				break;
			
			
			String [] data=s.split(",");
			int tot=Integer.parseInt(data[1])*Integer.parseInt(data[2]);
			System.out.println(i+data[0]+"\t"+data[1]+"t"+data[2]+tot);
			
			
		}
		
		
		
		
	} catch (FileNotFoundException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}catch (IOException e) {
		// TODO: handle exception
	}
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		fileRead();
	}

}
