package day0112;

class Food
{
	private String foodName;
	private int fPrice;
	
	static int no;
	
	//명시적생성자(2개)
	public Food(String fn,int fp)
	{
		this.foodName=fn;
		this.fPrice=fp;
	}	
	//한번에 출력 가능한 출력문 생성 
	public void getFood()
	{
		no++;
		
		System.out.println("[메뉴_"+no+"]");
		System.out.println("음식명: "+foodName);
		System.out.println("가격: "+fPrice);
		System.out.println("======================");
	}
	
}

//////////////////////////
public class ArrReview_01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Food food1=new Food("마르게리따 피자",12000);
				food1.getFood();
		Food food2=new Food("마르게리따 피자",12000);
				food2.getFood();
		Food food3=new Food("마르게리따 피자",12000);
				food3.getFood();		
	}

}
