package day0108;

public class For_07 {

	public static void main(String[] args) {
		//whil문과 for문 비교
		
		int i=10;
		
		while(i>=0)
		{
			System.out.print(i--+" "); //print in은 세로로 출력
		}
		System.out.println();
		
		System.out.println("**for문으로 10~0출력**");
		for(int a=10;a>=0;a--)
		{
			System.out.print(a+"   ");
		}

	}

}
